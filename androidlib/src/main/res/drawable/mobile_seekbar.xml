<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />

            <gradient
                android:angle="270"
                android:centerColor="#f0eeee"
                android:centerY="0.9"
                android:endColor="#f0eeee"
                android:startColor="#f0eeee" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/bg_app_base"
                    android:centerY="0.45"
                    android:endColor="@color/bg_app_base"
                    android:startColor="@color/bg_app_base" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/bg_app_base"
                    android:centerY="0.45"
                    android:endColor="@color/bg_app_base"
                    android:startColor="@color/bg_app_base" />
            </shape>
        </clip>
    </item>

</layer-list>